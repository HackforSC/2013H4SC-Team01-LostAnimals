<%= form_for(@user_session, :url => {:action => :login_create}, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @user_session.errors.any? %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>

      <ul class="unstyled" style="margin-bottom:0px;">
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <legend>Login</legend>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label'%>
    <div class="controls"><%= f.email_field :email %></div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label'%>
    <div class="controls"><%= f.password_field :password %></div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Login" %>
    </div>
  </div>
<% end %>
