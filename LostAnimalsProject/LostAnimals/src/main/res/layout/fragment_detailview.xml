<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="225dp"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher"
                />

        <View
                android:id="@+id/bar1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/holo_blue_light"
                android:layout_below="@+id/banner"
                />

        <TextView
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar1"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:text="PET FEATURES"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"/>

        <View
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_light"
                android:layout_below="@+id/category1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

        <LinearLayout
                android:id="@+id/feature_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_below="@+id/bar2"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:padding="8dp"
                        android:background="@color/grey80"

                        android:text="Type: Dog"
                        android:textColor="@color/grey30"
                        android:textSize="14dp"
                        />

                <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:padding="8dp"
                        android:background="@color/grey80"

                        android:text="Color: Black/Brown"
                        android:textColor="@color/grey30"
                        android:textSize="14dp"
                        />


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    >

                <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:padding="8dp"
                        android:background="@color/grey80"

                        android:text="Sex: Male"
                        android:textColor="@color/grey30"
                        android:textSize="14dp"
                        />

                <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:padding="8dp"
                        android:background="@color/grey80"

                        android:text="Size: Large"
                        android:textColor="@color/grey30"
                        android:textSize="14dp"
                        />


            </LinearLayout>


        </LinearLayout>

        <TextView
                android:id="@+id/category2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feature_box"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:text="PET STATUS"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"/>

        <View
                android:id="@+id/bar3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_light"
                android:layout_below="@+id/category2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

        <TextView
                android:id="@+id/tv_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar3"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"

                android:text="Created on May 11, 1990"
                android:textSize="16dp"
                android:textStyle="italic"
                />

        <TextView
                android:id="@+id/tv_updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_created_at"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"

                android:text="Updated on May 30, 2013"
                android:textSize="16dp"
                android:textStyle="italic"
                />

        <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_created_at"
                android:layout_alignBottom="@+id/tv_updated_at"
                android:layout_marginRight="32dp"
                android:gravity="center_vertical"


                android:text="LOST"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_light"
                />

        <TextView
                android:id="@+id/category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_updated_at"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:text="DESCRIPTION"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"/>

        <View
                android:id="@+id/bar4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_light"
                android:layout_below="@+id/category3"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@+id/bar4"
            android:textSize="16dp"
            />

    </RelativeLayout>
</ScrollView>